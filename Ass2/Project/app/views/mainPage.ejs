<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">  
    <link rel="stylesheet" href="/css/mainPage.css">
	<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/js/mainPageJs.js"></script>
    <title>SellPhone</title>
    <style>

    </style>

</head>
<body>
    <div class="topBar">
        <div class="topBarLogeImg">
            <h1 style="display: inline-block;"><a href="/">SellPhone</a> </h1>
            <img style="width: 50px;" src="/phone_default_images/smartphone.png" alt="smartphone">
        </div>

        <div class="topBarSearchArea">
            

            <div class="col-lg-6">
                <div class="input-group">
                    <input type="text" id="searchInputId" name="" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" id="searchButtonId">
                            Search!
                        </button>
                    </span>
                </div>
            </div>

            <div id="filter" >
                <select name="" id="brandSelectId">
                    <option value="">Choose a brand</option>
                    <% for(let i = 0; i< brandDate.length; i++) { %>
                        <option value="<%= brandDate[i]._id %>"><%= brandDate[i]._id %></option>
                    <% } %>
                </select><br><br>
                <input id="rangeId" type="range" min="1" max="1000" value="500">
                <p  id="rangerId">Current Max Price:$ <span id="rangeSlideValue"></span></p>
            </div>


        </div>

        <div class="topBarRightArea">
            <button> <a href="/checkout">Checkout</a> </button>
            <button>
                <%  if(ifLogin == 0) { %> 
                    <a href="/login">Sign-in </a>
                <% } else{ %>
                    <a href="/logout">Sign-out</a> 
                <% } %>
            </button>
            <button><a href="/showUserPage">User</a></button>
        </div>

    </div>

    <div id="contentAreaId">
        <div id="homeStateId"></div>
        <div class="midBox">
            <h1>Sold out soon</h1>
            <% for(let i = 0; i<soldOutPhoneList.length; i++ ) { %>
                <div class="displayBox">
                    <img src="/phone_default_images/<%= soldOutPhoneList[i].brand %>.jpeg" alt="phone image" style="width: 50%;">
                    <span  id="priceAreaId"><h2>$ <%= soldOutPhoneList[i].price %></h2></span>
                    <p><b>Quantity available: <span><%= soldOutPhoneList[i].stock %></span></b> </p> 
                    <div class="phoneIdArea"><%= soldOutPhoneList[i]._id %></div>
                </div>
            <% } %>
    
        </div>
        <div class="bottomBox">
            <h1>Best sellers</h1>
            <% for(let i = 0; i<bestSellerPhoneList.length; i++ ) { %>
                <div class="displayBox">
                    <img src="/phone_default_images/<%= bestSellerPhoneList[i].brand %>.jpeg" alt="phone image" style="width: 50%;">
                    <img src="/phone_default_images/hot.png" alt="" style="width: 20%">
                    <h3>Rate: <span><%= bestSellerPhoneList[i].avgRate.toFixed(2) %></span></h3> 
                    <div class="phoneIdArea"><%= bestSellerPhoneList[i]._id %></div>
                </div>
            <% } %>
    
        </div>
    </div>

</body>
</html>